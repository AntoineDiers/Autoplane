<launch>
    <node pkg="controller" exec="controller" name="controller" output="screen">

        <!-- roll PID -->
        <param name="roll_pid/kp" value="-0.05"/>
        <param name="roll_pid/ki" value="-0.01"/>
        <param name="roll_pid/kd" value="-0.0"/>
        <param name="roll_pid/imax" value="1.0"/>
        <param name="roll_pid/buffer_size" value="100"/>
        <param name="roll_pid/polyfit_order" value="3"/>

        <!-- pitch PID -->
        <param name="pitch_pid/kp" value="-0.05"/>
        <param name="pitch_pid/ki" value="-0.003"/>
        <param name="pitch_pid/kd" value="-0.0005"/>
        <param name="pitch_pid/imax" value="1.0"/>
        <param name="pitch_pid/buffer_size" value="100"/>
        <param name="pitch_pid/polyfit_order" value="3"/>

        <!-- remaps -->
        <remap from="~/imu" to="/pos/imu"/>
        <remap from="~/left_flap_cmd" to="/cmd/left_flap"/>
        <remap from="~/right_flap_cmd" to="/cmd/right_flap"/>
        <remap from="~/elevators_cmd" to="/cmd/elevators"/>
        <remap from="~/thruster_cmd" to="/cmd/thruster"/>
    </node>
</launch>