FROM ubuntu:24.04

# Install ROS
COPY assets/install_ros.sh /tmp/install_ros.sh
RUN /tmp/install_ros.sh

# Install rust 
ENV CARGO_HOME=/home/ubuntu/.cargo
ENV RUSTUP_HOME=/home/ubuntu/.rustup
ENV PATH="${CARGO_HOME}/bin:${PATH}"
COPY assets/install_rust.sh /tmp/install_rust.sh
RUN /tmp/install_rust.sh
RUN chmod -R a+rw $CARGO_HOME

# Install ros rust
COPY assets/install_ros_rust.sh /tmp/install_ros_rust.sh
RUN /tmp/install_ros_rust.sh